{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      // "@/actions/*": [
      //   "actions/*"
      // ],
      "@/config/*": [
        "config/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      // "@/contexts/*": [
      //   "src/contexts/*"
      // ],
      // "@/hooks": [
      //   "src/hooks/index.ts"
      // ],
      "@/redux/*": [
        "src/redux/*"
      ],
      "@/types": [
        "src/types/index.ts"
      ]
      // "@/utils/*": [
      //   "src/utils/*"
      // ]
    },
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "backups"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
